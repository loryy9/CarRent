<form action="<%= pacchetto ? `/updatePacchetto/${pacchetto.id}` : '/addPacchetto' %>" method="POST" class="bg-dark text-white p-5 rounded shadow-lg col-lg-6 mx-auto mt-5">
    <h3 class="text-warning mb-4 text-center"><%= pacchetto ? 'Modifica Pacchetto' : 'Inserisci un nuovo pacchetto' %></h3>

    <div class="row g-3">
        <div class="col-md-6">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control bg-black text-white border-secondary" id="nome" name="nome" value="<%= pacchetto ? pacchetto.nome : '' %>" placeholder="Es. Base" required>
        </div>
    </div>

    <div class="row g-3 mt-3">
        <label for="descrizione" class="form-label">Descrizione</label>
        <textarea class="form-control bg-black text-white border-secondary" id="descrizione" name="descrizione" placeholder="" required rows="5"><%= pacchetto ? pacchetto.descrizione : '' %></textarea>
    </div>

    <div class="row g-3 mt-3">
        <label for="prezzo" class="form-label">Prezzo (â‚¬)</label>
        <input type="number" class="form-control bg-black text-white border-secondary" id="prezzo" name="prezzo" step="0.01" min="0" value="<%= pacchetto ? pacchetto.prezzo : '' %>" placeholder="Es. 50.00" required>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="/dashboard?alert=elencoPacchetti" class="btn btn-secondary px-4 py-2">Annulla</a>
        <button type="submit" class="btn btn-warning px-5 py-2"><%= pacchetto ? 'Salva Modifiche' : 'Inserisci Pacchetto' %></button>
    </div>
</form>