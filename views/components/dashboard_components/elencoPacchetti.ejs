<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-white">Elenco dei pacchetti aggiuntivi</h3>
        <a href="/dashboard/inserimentoPacchetto" class="btn btn-warning">
            <i class="fas fa-plus"></i> Aggiungi Pacchetto
        </a>
    </div>
    <div class="row">
        <% if (pacchetti.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome</th>
                            <th>Descrizione</th>
                            <th class="text-end">Prezzo</th>
                            <th class="text-center">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pacchetti.forEach((pacchetto)=> { %>
                            <tr>
                                <td>
                                    <%= pacchetto.nome %>
                                </td>
                                <td>
                                    <%= pacchetto.descrizione %>
                                </td>
                                <td class="text-end">
                                    <%= pacchetto.prezzo %> â‚¬
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm gap-1" role="group">
                                        <form action="/getPacchetto/<%= pacchetto.id %>" method="GET"
                                            class="d-inline">
                                            <button type="submit" class="btn btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </form>
                                        <form class="d-inline">
                                            <button type="button" class="btn btn-danger"
                                                data-bs-toggle="modal" data-bs-target="#confirmDeleteModal-<%= pacchetto.id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>

                            <div class="modal fade" id="confirmDeleteModal-<%= pacchetto.id %>" tabindex="-1"
                                aria-labelledby="confirmDeleteLabel-<%= pacchetto.id %>" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmDeleteLabel-<%= pacchetto.id %>">Conferma
                                                Eliminazione</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Sei sicuro di voler eliminare questo pacchetto?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla
                                            </button>
                                            <form action="/deletePacchetto/<%= pacchetto.id %>" method="POST">
                                                <button type="submit" class="btn btn-danger">Elimina</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> Nessun pacchetto disponibile.
                </div>
            <% } %>
    </div>
</div>