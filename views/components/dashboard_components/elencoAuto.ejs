<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-white">Elenco delle Automobili</h3>
        <a href="/dashboard?alert=inserimentoAuto" class="btn btn-warning">
            <i class="fas fa-plus"></i> Aggiungi Auto
        </a>
    </div>
    <div class="row">
        <% if (auto.length > 0) { %>
            <% auto.forEach((auto) => { %>
                <div class="col-md-4 mb-3">
                    <%- include('../card', { auto }) %>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> Nessun auto disponibile.
                </div>
        <% } %>
    </div>
</div>