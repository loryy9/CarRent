<div class="card border-0 shadow-sm">
    <div class="overflow-hidden rounded-top-3">
        <!-- <img src="<%= auto.image %>" class="card-img-top car-image" alt="<%= auto.marca %> <%= auto.modello %>"> -->
        <img src="/assets/home_image.jpg" class="card-img-top car-image">
    </div>
    <div class="card-body p-4">
        <h5 class="card-title fw-bold mb-2">
            <%= auto.marca %>
                <%= auto.modello %>
        </h5>
        <span class="badge bg-warning text-dark mb-3">
            <%= auto.tipologia %>
        </span>
        <div class="d-flex gap-3 mb-3">
            <span><i class="fas fa-tachometer-alt me-1 text-warning"></i>
                <%= auto.velocita %>
            </span>
            <span><i class="fas fa-horse-head me-1 text-warning"></i>
                <%= auto.cavalli %>
            </span>
        </div>
        <p class="fw-bold mb-3"> Da <%= auto.prezzo_giornaliero %> / giorno </p>
        <div class="row g-2">
            <div class="col-10">
                <% if (user.ruolo == 0) { %>
                    <a href="/prenota" class="btn btn-warning w-100">Prenota Ora</a>
                <% } else if (user.ruolo == 1) { %>
                    <a href="/dashboard?alert=modificaAuto" class="btn btn-warning w-100">Modifica</a>
                <% } %>
            </div>
            <div class="col-2">
                <% if (user.ruolo == 0) { %>
                    <a href="#" class="btn btn-outline-warning w-100">
                        <i class="fa-solid fa-heart"></i>
                    </a>
                <% }  %>
            </div>
        </div>
    </div>
</div>