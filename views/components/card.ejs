<div class="col-10 col-lg-4 mb-4" id="<%= auto.id %>">
    <div class="card border-0 shadow-sm">
        <div class="overflow-hidden rounded-top-3">
            <img src="<%= auto.image %>" class="card-img-top car-image" alt="<%= auto.marca %> <%= auto.modello %>">
        </div>
        <div class="card-body p-4">
            <h5 class="card-title fw-bold mb-2"> <%= auto.marca %> <%= auto.modello %> </h5>
            <span class="badge bg-warning text-dark mb-3"> <%= auto.tipologia %> </span>
            <div class="d-flex justify-content-between mb-3">
                <span><i class="fas fa-tachometer-alt me-1 text-warning"></i> <%= auto.velocita %> </span>
                <span><i class="fas fa-horse-head me-1 text-warning"></i> <%= auto.cavalli %> </span>
            </div>
            <p class="fw-bold mb-3"> <%= auto.prezzo_giornaliero %> </p>
            <div class="row g-2">
                <div class="col-10">
                    <a href="/prenota" class="btn btn-warning w-100">Prenota Ora</a>
                </div>
                <div class="col-2">
                    <a href="#" class="btn btn-outline-warning w-100">
                        <i class="fa-solid fa-heart"></i>
                    </a>
                </div>
            </div> 
        </div>
    </div>
</div>